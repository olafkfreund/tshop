# TShop Development Environment Variables
# Copy this file to .env.local and configure with your actual values

# =================================
# Database Configuration
# =================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/tshop_dev"
DATABASE_TEST_URL="postgresql://postgres:password@localhost:5432/tshop_test"

# =================================
# Authentication (NextAuth.js)
# =================================
NEXTAUTH_URL="https://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =================================
# AI Integration (Google Gemini)
# =================================
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"

# =================================
# Payment Processing (Stripe)
# =================================
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =================================
# Redis Cache
# =================================
REDIS_URL="redis://localhost:6379"

# =================================
# File Storage & CDN
# =================================
# Cloudinary (recommended)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Vercel Blob (alternative)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# =================================
# Print-on-Demand Fulfillment
# =================================
# Printful (premium quality)
PRINTFUL_API_KEY="your-printful-api-key"
PRINTFUL_STORE_ID="your-printful-store-id"

# Printify (cost-effective)  
PRINTIFY_API_KEY="your-printify-api-key"
PRINTIFY_SHOP_ID="your-printify-shop-id"

# =================================
# Email Service
# =================================
# Resend (recommended)
RESEND_API_KEY="your-resend-api-key"

# SendGrid (alternative)
SENDGRID_API_KEY="your-sendgrid-api-key"

# =================================
# Analytics & Monitoring
# =================================
# Vercel Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Google Analytics (optional)
GA_TRACKING_ID="G-XXXXXXXXXX"

# =================================
# Development Configuration
# =================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="https://localhost:3000"

# SSL/HTTPS for local development (camera permissions)
HTTPS="true"
SSL_CRT="./certs/localhost.pem"
SSL_KEY="./certs/localhost-key.pem"

# Performance & Debugging
NODE_OPTIONS="--max-old-space-size=4096"
NEXT_TELEMETRY_DISABLED="1"
TURBO="1"

# =================================
# Rate Limiting & Security
# =================================
# Rate limiting (requests per window)
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="900000"

# AI Usage Limits (per user tier)
AI_LIMIT_FREE="2"
AI_LIMIT_REGISTERED="10" 
AI_LIMIT_PREMIUM="100"

# =================================
# Internationalization
# =================================
DEFAULT_LOCALE="en"
SUPPORTED_LOCALES="en,es,fr,de"

# =================================
# Feature Flags (Development)
# =================================
ENABLE_AI_GENERATION="true"
ENABLE_3D_PREVIEW="true"
ENABLE_AR_CAMERA="true"
ENABLE_SOCIAL_FEATURES="true"
ENABLE_GAMIFICATION="true"

# =================================
# External APIs (Optional)
# =================================
# Unsplash (for stock imagery)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# =================================
# Development Tools
# =================================
# Storybook
STORYBOOK_PORT="6006"

# Playwright
PLAYWRIGHT_BROWSERS_PATH="/home/user/.cache/ms-playwright"

# Bundle Analysis
ANALYZE="false"

# =================================
# Production Overrides
# =================================
# These will be set differently in production
VERCEL_URL=""
VERCEL_ENV=""
VERCEL_REGION=""

# =================================
# Local Development Ports
# =================================
PORT="3000"
POSTGRES_PORT="5432"
REDIS_PORT="6379"
PRISMA_STUDIO_PORT="5555"

# =================================
# Logging & Debugging
# =================================
LOG_LEVEL="info"
DEBUG="false"
PRISMA_LOG_LEVEL="info"

# =================================
# AI Model Configuration
# =================================
# Model selection for different complexity levels
GEMINI_MODEL_SIMPLE="gemini-pro-flash"
GEMINI_MODEL_COMPLEX="gemini-pro"
GEMINI_MAX_TOKENS="1000"

# =================================
# Image Processing
# =================================
# Image optimization settings
IMAGE_QUALITY="85"
IMAGE_MAX_WIDTH="2048"
IMAGE_MAX_HEIGHT="2048"

# =================================
# Session & Cookie Configuration  
# =================================
SESSION_SECRET="your-session-secret-key-change-this"
COOKIE_SECURE="true"
COOKIE_SAME_SITE="lax"
SESSION_MAX_AGE="2592000"

# =================================
# API Rate Limiting Per Service
# =================================
GEMINI_REQUESTS_PER_MINUTE="60"
STRIPE_REQUESTS_PER_SECOND="25"
PRINTFUL_REQUESTS_PER_SECOND="10"
PRINTIFY_REQUESTS_PER_SECOND="2"